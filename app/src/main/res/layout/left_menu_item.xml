<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/drawer_list_item_selector">

    <ImageView
        android:id="@+id/leftmenu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/help"
        android:layout_gravity="center"/>

    <com.drava.android.ui.DravaTextView
        android:id="@+id/leftmenu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="my help"
        android:textSize="16sp"
        android:textColor="@color/color_light_text"
        android:fontFamily="@string/roboto_thin"/>

</LinearLayout>