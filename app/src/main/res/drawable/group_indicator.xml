<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item android:bottom="15dp" android:drawable="@drawable/down_arrow" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </layer-list>
    </item>
    <item android:state_expanded="true">
        <layer-list>
            <item android:bottom="15dp" android:drawable="@drawable/up_arrow" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="15dp" android:drawable="@drawable/down_arrow" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </layer-list>
    </item>
</selector>